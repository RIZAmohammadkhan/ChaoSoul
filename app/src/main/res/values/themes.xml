<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Base application theme for DAY MODE.
        Parent: Theme.Material3.Day.NoActionBar
        This is the modern Material You theme without a default top action bar.
    -->
    <style name="Theme.ChaoSoul" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_main</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal_main</item>
        <item name="colorSecondaryVariant">@color/secondary_teal_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
</resources>