<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Base application theme for NIGHT MODE.
        Parent: Theme.Material3.Night.NoActionBar
        This theme is automatically applied by the system when the user is in dark mode.
    -->
    <style name="Theme.ChaoSoul" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue_main</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal_light</item>
        <item name="colorSecondaryVariant">@color/secondary_teal_main</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
</resources>