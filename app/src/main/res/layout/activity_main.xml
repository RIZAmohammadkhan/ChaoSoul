<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".ui.main.MainActivity">

    <!-- 1. The "Analyze" button is now at the root level, constrained to the bottom. -->
    <!-- This makes it a "sticky footer" that will NOT scroll. -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_run_analysis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="14dp"
        android:text="@string/button_analyze_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- 2. We add a NestedScrollView to hold all the content that SHOULD scroll. -->
    <!-- It is constrained to fill the space between the top of the screen and the button. -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_run_analysis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 3. A ScrollView can only have ONE direct child. We use a LinearLayout -->
        <!-- to hold all our views in a vertical stack. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- All of your original scrolling content now goes inside this LinearLayout -->
            <ImageView
                android:id="@+id/wallpaper_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/preview_bg"
                android:scaleType="centerCrop"
                android:contentDescription="@string/desc_wallpaper_preview"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/label_your_soul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_your_current_soul"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/setup_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include layout="@layout/include_setup_step"
                        android:id="@+id/step_usage_stats"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <include layout="@layout/include_setup_step"
                        android:id="@+id/step_accessibility"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>

                    <include layout="@layout/include_setup_step"
                        android:id="@+id/step_set_wallpaper"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>